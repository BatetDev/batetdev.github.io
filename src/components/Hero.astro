---
import { marked } from 'marked';
import siteConfig from '../data/site-config';
import Button from './Button.astro';

const hero = siteConfig.hero;
---

{
  (hero?.title || hero?.image?.src || hero?.text || (hero?.actions && hero.actions.length > 0)) && (
    <section class="w-full flex flex-col gap-5 mb-16">
      {hero.title && <h1 class="leading-tight tracking-wider font-code font-medium text-xl text-emerald-300">{hero.title}</h1>}
      {hero.image?.src && (
        <figure>
          <img class="w-full" src={hero.image.src} loading="lazy" decoding="async" alt={hero.image.alt || ''} />
          {hero.image.caption && <figcaption class="mt-1.5 text-xs">{hero.image.caption}</figcaption>}
        </figure>
      )}
      {hero.text && <div class="max-w-none prose" set:html={marked.parse(hero.text)} />}
      {hero.actions && hero.actions.length > 0 && (
        <div class="flex flex-wrap gap-4 mt-2">
          {hero.actions.map((action) => (
            <Button href={action.href}>{action.text}</Button>
          ))}
        </div>
      )}
    </section>
  )
}
