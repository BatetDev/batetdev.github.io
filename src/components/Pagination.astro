---
import CircleArrow from './CircleArrow.astro';

const { page, class: className } = Astro.props;
---

<nav aria-label="Pagination" class:list={['px-12 py-2 relative text-center last:mb-2', className]}>
  {
    page.url.prev && (
      <CircleArrow
        direction="left"
        href={page.url.prev}
        ariaLabel={`Go to page ${page.currentPage - 1} of ${page.lastPage}`}
        class="absolute left-0 top-1/2 -translate-y-1/2"
      />
    )
  }
  <span class="text-sm md:text-base font-code font-semibold tracking-wide" aria-current="page">
    Page {page.currentPage} of {page.lastPage}
  </span>
  {
    page.url.next && (
      <CircleArrow
        direction="right"
        href={page.url.next}
        ariaLabel={`Go to page ${page.currentPage + 1} of ${page.lastPage}`}
        class="absolute right-0 top-1/2 -translate-y-1/2"
      />
    )
  }
</nav>
