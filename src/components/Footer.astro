---
import siteConfig from '../data/site-config';
import { Github, Linkedin } from '@lucide/astro';

const iconMap = {
  GitHub: Github,
  LinkedIn: Linkedin,
} as const;

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="w-full bg-zinc-950/95 border-t-2 border-emerald-400/50 py-4 mt-6">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    {
      navLinks.length > 0 && (
        <div class="mb-6 flex flex-wrap gap-x-6 gap-y-2 justify-center">
          {navLinks.map((link) => (
            <a class="text-gray-300 hover:text-emerald-400 transition font-body" href={link.href}>
              {link.text}
            </a>
          ))}
        </div>
      )
    }
    <div class="flex flex-col gap-5 sm:flex-row sm:justify-between sm:items-center">
      {
        socialLinks.length > 0 && (
          <div class="flex flex-wrap gap-x-6 gap-y-1 justify-center">
            {socialLinks.map((link) => {
              const Icon = iconMap[link.text as keyof typeof iconMap];
              return (
                <a
                  class="inline-flex items-center justify-center text-sm text-gray-300 hover:text-emerald-400 transition"
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  title={link.text}
                >
                  {Icon ? <Icon class="w-5 h-5" /> : link.text}
                </a>
              );
            })}
          </div>
        )
      }
      <p class="text-xs text-gray-400 text-center">
        &copy; {new Date().getFullYear()}&nbsp;<a class="hover:text-emerald-400 transition" href="/">{siteConfig.title}</a>. All rights reserved.
      </p>
    </div>
  </div>
</footer>
