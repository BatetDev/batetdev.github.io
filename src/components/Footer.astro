---
import siteConfig from '../data/site-config';
import { Github, Linkedin } from '@lucide/astro';

const iconMap = {
  GitHub: Github,
  LinkedIn: Linkedin,
} as const;

const socialLinks = siteConfig.socialLinks || [];
const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="w-full bg-zinc-950 border-t-2 border-emerald-500/50 py-5 mt-8 md:py-6 md:mt-10">
  <div class="max-w-3xl mx-auto">
    {
      navLinks.length > 0 && (
        <div class="mb-4 flex flex-wrap gap-x-12 md:gap-x-14 gap-y-2 justify-center">
          {navLinks.map((link) => (
            <a class="text-gray-300 hover:text-emerald-300 transition duration-250" href={link.href}>
              {link.text}
            </a>
          ))}
        </div>
      )
    }
    <div class="flex flex-col gap-3 md:gap-6 justify-between items-center">
      {
        socialLinks.length > 0 && (
          <div class="flex flex-wrap gap-x-6 md:gap-x-10 gap-y-1 justify-center">
            {socialLinks.map((link) => {
              const Icon = iconMap[link.text as keyof typeof iconMap];
              return (
                <a
                  class="inline-flex items-center justify-center text-sm text-gray-300 hover:text-emerald-300 transition duration-250"
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  title={link.text}
                >
                  {Icon ? <Icon class="w-6 h-6 md:w-8 md:h-8" /> : link.text}
                </a>
              );
            })}
          </div>
        )
      }
      <p class="text-xs md:text-sm text-gray-300 text-center font-medium mt-2">
        &copy; {new Date().getFullYear()}&nbsp;<a class="hover:text-emerald-300 transition duration-250" href="/">{siteConfig.title}</a>. All rights reserved.
      </p>
    </div>
  </div>
</footer>
