---
import { type CollectionEntry } from 'astro:content';

type Props = { project: CollectionEntry<'projects'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { project, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description } = project.data;
const TitleTag = headingLevel;

const previewClasses = 'flex justify-between items-start gap-8 group';
const innerClasses =
  'grow relative bg-gray-950/60 backdrop-blur-sm border-2 border-gray-200/60 rounded-lg p-5 shadow-md shadow-emerald-400/30 transition duration-300 hover:shadow-emerald-400/50 hover:border-emerald-300/90 hover:scale-[1.01]';
---

<a class:list={[previewClasses, className]} href={`/projects/${project.id}/`}>
  <div class={innerClasses}>
    <TitleTag class="text-lg leading-tight tracking-wider font-bold">
      {title}
    </TitleTag>
    {description && <div class="mt-3 text-sm leading-normal">{description}</div>}
  </div>
</a>
