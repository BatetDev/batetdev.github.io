---
import { type CollectionEntry } from 'astro:content';

type Props = { project: CollectionEntry<'projects'>; class?: string; headingLevel?: 'h2' | 'h3' };

const { project, class: className, headingLevel = 'h2' } = Astro.props;
const { title, description } = project.data;
const TitleTag = headingLevel;

const previewClasses = 'flex justify-between items-start gap-8 group';
const innerClasses =
  'grow relative bg-gray-900/20 backdrop-blur-sm border borde-emerald-400/50 rounded-lg p-6 shadow-md shadow-emerald-400/30 transition-all duration-300 hover:shadow-emerald-400/50';
---

<a class:list={[previewClasses, className]} href={`/projects/${project.id}/`}>
  <div class={innerClasses}>
    <TitleTag class="text-xl leading-tight font-body font-medium sm:text-2xl">
      {title}
    </TitleTag>
    {description && <div class="mt-1 text-sm leading-normal">{description}</div>}
  </div>
</a>
